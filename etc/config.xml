<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <googletagmanager>
            <general>
                <datalayer_name>dataLayer</datalayer_name>
                <item_variant_layer>0</item_variant_layer>
                <item_variant_format>2</item_variant_format>
                <category_layer>0</category_layer>
            </general>
            <gdpr>
                <enabled>0</enabled>
                <restriction_cookie_name>user_allowed_save_cookie</restriction_cookie_name>
            </gdpr>
        </googletagmanager>
    </default>
</config>
